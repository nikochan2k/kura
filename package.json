{
  "name": "kura",
  "version": "0.1.121",
  "description": "The FileSystem API abstraction library.",
  "author": "Yoshihiro Seki",
  "license": "MIT",
  "homepage": "https://github.com/nikochan2k/kura",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "kura",
    "FileSystem",
    "storage",
    "IndexedDB"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nikochan2k/kura.git"
  },
  "scripts": {
    "clean": "rimraf ./lib",
    "compile": "tsc",
    "build": "npm-run-all clean compile",
    "npm-version": "npm version patch",
    "npm-login": "npm login",
    "npm-publish": "npm publish",
    "release": "npm-run-all clean compile npm-version npm-login npm-publish",
    "test": "jest --runInBand"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/src/__tests__/*.spec.+(ts|tsx|js)"
    ],
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@types/base-64": "^0.1.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.1",
    "fake-indexeddb": "^3.0.0",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "base-64": "^0.1.0"
  }
}
